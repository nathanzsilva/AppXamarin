<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.TipoPagina.Navigation.Pagina1"
             Title="Título da Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" IconImageSource="xamarin.png"/>
        <ToolbarItem Text="Deatlhes" IconImageSource="anya.jpeg"/>
        <ToolbarItem Text="Ordena" IconImageSource="play.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma Content Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Ir para página 2" Clicked="MudarParaPagina2"/>
            <Button Text="Chamar Modal" Clicked="ChamarModal"/>
            
            <Button Text="Chamar Master" Clicked="ChamarMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>